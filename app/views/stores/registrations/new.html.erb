<h2>Registro de cuenta para tiendas</h2>
<div class="form-group text-md-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "stores/shared/error_messages", resource: resource %>
    <div class="field form-group">
      <%= f.label :name, "Nombre de la tienda" %><br />
      <%= f.text_field :name, autofocus: true, class:"form-control col-md-4", :required => true  %>
    </div>
    <div class="field form-group">
      <%= f.label :address, "DirecciÃ³n" %><br />
      <%= f.text_field :address, class:"form-control col-md-4", :required => true   %>
    </div>
    <div class="field form-group">
      <%= f.label :phone, "TelÃ©fono" %><br />
      <%= f.text_field :phone, class:"form-control col-md-4", :required => true   %>
    </div>
    <div class="field form-group">
      <%= f.label :email, "E-mail"  %><br />
      <%= f.email_field :email, class:"form-control col-md-4", :required => true   %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-md-4", :required => true  %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-md-4", :required => true  %>
    </div>

    <div class="actions form-group">
      <button type="submit" class="btn btn-success">Enviar</button>
    </div>
  <% end %>
</div>
<%= render "stores/shared/links" %>
